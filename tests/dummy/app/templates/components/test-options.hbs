<h2>Drag and drop with options</h2>

<h3>Copy items</h3>

{{#ember-dragula options=(hash copy=true) on-drop=(action "dropped") on-drag=(action "dragged") as |d|}}
  {{#d.container class="list" id="list-copy-1"}}
    {{#each list as |item|}}
      <div class="item">{{item.name}}</div>
    {{/each}}
  {{/d.container}}

  {{#d.container class="list" id="list-copy-2"}}
    {{#each listTwo as |item|}}
      <div class="item">{{item.name}}</div>
    {{/each}}
  {{/d.container}}
{{/ember-dragula}}

<h3>Move disabled</h3>

